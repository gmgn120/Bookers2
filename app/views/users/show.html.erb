<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= flash[:notice] %>
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>Title : 
  <%= link_to book_path(book.id) do %>
  <%= book.title %></p>
  <% end %>
  <p>Opinion : <%= book.body %></p>
</div>
<% end %>

<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<P>name <%= @user.name %></P>
<p>introduction <%= @user.introduction %></p>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <h4>Title</h4><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <h4>Opinion</h4><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>