<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= flash[:notice] %>
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
  <tr><td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
  </tbody>
<% end %>
</table>

<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    </tbody>
  </table>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <h4>Title</h4><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <h4>Opinion</h4><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>