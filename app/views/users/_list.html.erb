<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <h4>Title</h4><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <h4>Opinion</h4><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>