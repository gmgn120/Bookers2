<%= flash[:notice] %>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    </tbody>
  </table>
  <div class="row">
  <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: @newbook, local:true do |f| %>
  <div class="field">
    <h4>Title</h4><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <h4>Opinion</h4><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
<div class="book-body">
  <tbody>
    <tr>
      <td><p><%=link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br><%= @book.user.name %></p><%end%></td>
      <td><p><%= link_to book_path(@book.id) do %><%= @book.title %></p><% end %></td>
      <td><p><%= @book.body %></p></td>
  <%if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
  <% end %>
</div>
</tr>
</tbody>
</table>
</div>
</div>
</div>
</main>
