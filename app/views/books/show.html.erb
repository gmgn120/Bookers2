<div class="book-body">
  <p><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <%if @book.user == current_user %>
    <%= button_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
