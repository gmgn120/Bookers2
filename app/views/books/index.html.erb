<%= flash[:notice] %>
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
<div>
  <tr>
  <td><p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p></td>
  <td><%= link_to book_path(book.id) do %><%= book.title %></p><% end %></td>
  <td><%= book.body %></p></td>
</div>
  </tr>
  </tbody>
<% end %>
</table>