<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputtitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"タイトル"%>
  <label for="inputopinion">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputopinion", placeholder:"本文" %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> 
| <%= link_to "Back", books_path %>
